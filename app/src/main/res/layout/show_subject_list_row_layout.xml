<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/duty_location_textView_guards_duties_list_row_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Class Name"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/to_textView_guards_duties_list_row_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duty_location_textView_guards_duties_list_row_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Start Time: "
            android:textColor="#fff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/to_change_textView_guards_duties_list_row_layout"
            android:layout_below="@id/duty_location_textView_guards_duties_list_row_layout"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/to_textView_guards_duties_list_row_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="5am"/>

        <TextView
            android:id="@+id/from_textView_guards_duties_list_row_layout"
            android:layout_below="@id/duty_location_textView_guards_duties_list_row_layout"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/from_change_textView_guards_duties_list_row_layout"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="End Time: "/>

        <TextView
            android:id="@+id/from_change_textView_guards_duties_list_row_layout"
            android:layout_below="@id/duty_location_textView_guards_duties_list_row_layout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="9 PM"/>


        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/to_textView_guards_duties_list_row_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Location: "
            android:textColor="#fff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/one_change"
            android:layout_below="@id/to_change_textView_guards_duties_list_row_layout"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/one"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="5am"/>

        <TextView
            android:id="@+id/two"
            android:layout_below="@id/from_change_textView_guards_duties_list_row_layout"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/from_change_textView_guards_duties_list_row_layout"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="Instructor:"/>

        <TextView
            android:id="@+id/two_change"
            android:layout_below="@id/from_change_textView_guards_duties_list_row_layout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="9 PM" />
    </RelativeLayout>

</RelativeLayout>